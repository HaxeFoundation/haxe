(include_subdirs unqualified)

(env
	(dev
		(flags (:standard -w -40 -w -3)))
	(release
		(flags (:standard -thread -g -w -3))
	)
)

(executable
	(name haxe)
	(public_name haxe)
	(package haxe)
	(libraries
		extc extproc extlib_leftovers ilib javalib neko objsize pcre swflib ttflib ziplib
		json
		unix str threads dynlink
		xml-light extlib ptmap sha
	)
	(preprocess (per_module
		((pps sedlex.ppx) json lexer)
	))
	(link_flags (-cclib "-Wl,-Bstatic -lpcre -lz -Wl,-Bdynamic"))
)